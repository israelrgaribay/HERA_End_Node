//=================================================LIBRARIES=========================================================================================================
#include <SD.h>                   // for logging data to SD card
#include <SPI.h>                  // SPI pins -> Pin D10: SS    | D6 (for PunchThrough Bean+ device)
                                  //             Pin D11: MOSI  | D7
                                  //             Pin D12: MISO  | D8
                                  //             Pin D13: SCK   | D9
                                  //
#include <Wire.h>                 // I2C library needed to interface with RTC module
                                  // I2C pins -> Pin A04: SCL   | Grove Buss
                                  //             Pin A05: SDA   | Grove Buss
#include <DS3231.h>               // library for interfacing with RTC module
                                  //
#include <LiquidCrystal.h>        // library for displaying on LCD
//=================================================GLOBAL PARAMETERS=================================================================================================
int RTC_Time = 0;                 // time from RTC D3231 Module

//=================================================ABSTRACT DATA TYPES===============================================================================================
//=================================================FUNCTION PROTOTYPES===============================================================================================
//=================================================BEGIN HERA END NODE CODE==========================================================================================

void setup(){
  Wire.begin();
 
  Serial.begin(9600);
  Serial.println("\nRTC Time Module");
}

void loop(){
  char c = 'n';
  Wire.beginTransmission(0x68);             // address of RTC module
  Wire.requestFrom(0x68, 0x00);
  while (Wire.available()){
    c = Wire.read();
    Serial.println(c);
  }
  Serial.println(c,HEX);
  delay(5000);           // wait 5 seconds for next scan
}

